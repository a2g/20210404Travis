{
	"$id": "https://example.com/arrays.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "A representation of a person, company, organization, or place",
	"type": "object",
	"properties": {
		"objects": {
			
			"type": "array",
			"minItems": 2,
			"items": {
				"type": "string"
			}
		},
		"transactions": {
			"type": "array",
			"minItems": 2,
			"items": {
				"$ref": "#/definitions/transaction_type"
			}
		}
	},
	"definitions": {
		"prop_type": {
			"enum": ["map",	"compass","flare","flaregun"]
		},
	    "verb_type": {
			"enum": ["use",	"pickup"]
		},

		"transaction_type": {
			"type": "object",
			"properties": {
				"a_and_b_generates_c": {
					"$ref": "#/definitions/a_and_b_generates_c"
				},
				"creates_c": {
					"$ref": "#/definitions/creates_c"
				},
				"a_transforms_b_into_c" :  {
					"$ref": "#/definitions/a_transforms_b_into_c"
				}
			}
		},
		
		"a_and_b_generates_c" : {
				"description": "A and B generates C",
			"properties": {
				"inputA": {
					"$ref": "#/definitions/prop_type"
				},
				"inputB": {
					"$ref": "#/definitions/prop_type"
				}
			}
		},
		"creates_c": {
			"description": "Creates C",
			"properties": {
				"inputA": {
					"$ref": "#/definitions/prop_type"
				},
				"inputB": {
					"$ref": "#/definitions/prop_type"
				}
			}
		},
		"a_transforms_b_into_c":{
				"description": "A transforms B into C",
					"properties": {
						"inputA": {
							"$ref": "#/definitions/prop_type"
						},
						"inputB": {
							"$ref": "#/definitions/prop_type"
						}
					}
		}
	}
}